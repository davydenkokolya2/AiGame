<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/icon_background_castle"
    tools:context=".ui.menu.MenuFragment">


    <TextView
        android:id="@+id/textView7"
        android:layout_width="32dp"
        android:layout_height="11dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/info"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:translationZ="1dp"
        app:layout_constraintEnd_toEndOf="@+id/btnHomeInfo"
        app:layout_constraintStart_toStartOf="@+id/btnHomeInfo"
        app:layout_constraintTop_toBottomOf="@+id/btnHomeInfo" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="@string/simulator"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:translationZ="1dp"
        app:layout_constraintEnd_toEndOf="@+id/btnHomeSimulator"
        app:layout_constraintStart_toStartOf="@+id/btnHomeSimulator"
        app:layout_constraintTop_toBottomOf="@+id/btnHomeInfo" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_main_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="-125dp"
        android:src="@drawable/icon_cat"
        android:translationZ="-1dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp"
        android:src="@drawable/icon_up_bar"
        android:translationZ="-2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvMainMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="23dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/_00000000"
        android:textColor="@color/yellow"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="@string/wheel"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@+id/btnHomeWheel"
        app:layout_constraintStart_toStartOf="@+id/btnHomeWheel"
        app:layout_constraintTop_toBottomOf="@+id/btnHomeInfo" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="@string/shop"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@+id/btnHomeShop"
        app:layout_constraintStart_toStartOf="@+id/btnHomeShop"
        app:layout_constraintTop_toBottomOf="@+id/btnHomeInfo" />

    <ImageView
        android:id="@+id/btnHomeInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:src="@drawable/icon_btn_info"
        app:layout_constraintEnd_toStartOf="@+id/btnHomeShop"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <ImageView
        android:id="@+id/btnHomeSimulator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="213dp"
        android:src="@drawable/icon_button_simulator"
        app:layout_constraintEnd_toStartOf="@+id/btnHomeWheel"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnHomeShop"
        app:layout_constraintTop_toTopOf="@+id/btnHomeShop" />

    <ImageView
        android:id="@+id/btnHomeShop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:src="@drawable/icon_button_store"
        app:layout_constraintEnd_toStartOf="@+id/btnHomeSimulator"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnHomeInfo"
        app:layout_constraintTop_toTopOf="@+id/btnHomeInfo" />

    <ImageView
        android:id="@+id/btnHomeWheel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:src="@drawable/icon_button_wheel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnHomeSimulator"
        app:layout_constraintTop_toTopOf="@+id/btnHomeSimulator" />
</androidx.constraintlayout.widget.ConstraintLayout>