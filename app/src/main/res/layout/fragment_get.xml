<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/icon_get_fragment"
    tools:context=".ui.get.GetFragment">


    <ImageView
        android:id="@+id/btnGet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:src="@drawable/icon_button_buy_shop_pop_up"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="@string/get"
        android:textColor="@color/red"
        android:textSize="22sp"
        android:translationZ="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnGet"
        app:layout_constraintEnd_toEndOf="@+id/btnGet"
        app:layout_constraintStart_toStartOf="@+id/btnGet"
        app:layout_constraintTop_toTopOf="@+id/btnGet" />

    <TextView
        android:id="@+id/tvGetTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-40dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/get"
        android:textColor="@color/white"
        android:textSize="52sp"
        android:translationZ="1dp"
        app:layout_constraintEnd_toEndOf="@+id/btnGet"
        app:layout_constraintStart_toStartOf="@+id/btnGet"
        app:layout_constraintTop_toBottomOf="@+id/ivGetImage" />

    <ImageView
        android:id="@+id/ivGetImage"
        android:layout_width="400dp"
        android:layout_height="250dp"
        android:src="@drawable/icon_furniture_image_7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>